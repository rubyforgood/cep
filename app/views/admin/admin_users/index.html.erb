<% content_for(:title) do %>
  Admins
<% end %>

<div class="container-fluid">
  <div class="row justify-content-around">
    <div class="col-lg-1 col-md-2">
      <h3><%= page_header_title %></h3>
    </div>
    <div class="col-lg-1 offset-lg-10 col-md-2 offset-md-8">
      <%= link_to 'Add new', new_admin_admin_user_path, class: "btn btn-purple-primary m-2"  %>
    </div>
  </div>
</div>


<table class="table m-4">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Status</th>
      <th class="text-center" scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr scope="row">
        <td>
          <%= admin_user.name %>
        </td>
        <td>
          <%= admin_user.email %>
        </td>
        <td>
          <%= admin_user.phone_number %>
        </td>
        <td>
          <%= admin_user.status %>
        </td>
        <td class="text-center teal-text">
          <%= link_to "Edit", edit_admin_admin_user_path(admin_user) %> |

          <% if admin_user.active? %>
            <%= link_to "Deactivate", deactivate_admin_admin_user_path(admin_user), method: :patch, data: { confirm: "Are you sure?" } %>
          <% else %>
            <%= link_to "Activate", activate_admin_admin_user_path(admin_user), method: :patch, data: { confirm: "Are you sure?" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
