<%= link_to 'Back', :back%>

<h3>Edit Organization Profile</h3>
<br>

<%= form_for @organization, url: admin_organization_path(@organization), html: { method: :put } do |f| %>
  <div class="row pr-3 pb-4">
    <div class="col-6">
      <%= f.text_field :name, class: "form-control py-2", placeholder: "Organization Name" %>
    </div>  
  </div>

  <div class="row pr-3 pb-4">
    <div class="col-6">
      <%= f.text_field :email, class: "form-control py-2", placeholder: "Email Address" %>
    </div>  
  </div>

  <div class="row pr-3 pb-4">
    <div class="col-6">
      <%= f.text_field :address1, class: "form-control py-2", placeholder: "Street Address" %>
    </div>  
  </div>

  <div class="row pr-3 pb-4">
    <div class="col-6">
      <%= f.text_field :address2, class: "form-control py-2", placeholder: "Apt, Suite, Building (Optional)" %>
    </div>  
  </div>
  
  <div class="row pr-3 pb-4">
    <div class="col-3">
      <%= f.text_field :zip_code, class: "form-control py-2", placeholder: "Zip Code" %>
    </div>
    
    <div class="col-3">
      <%= f.text_field :city, class: "form-control py-2", placeholder: "City" %>
    </div>  
  </div>

  <div class="row pr-3 pb-4">
    <div class="col-6">
      <%= f.select( :state, Carmen::Country.coded("US").subregions.typed("state").map { |state| [state.name, state.code] },
      { include_hidden: false, selected: @organization.state },
      { 'data-controller' => 'autocomplete-select',
      'data-autocomplete-select-placeholder' => "Select State"}
      ) %>
    </div>  
  </div>

  <div class="row pr-3 pb-4 mt-4">
    <div class="col-2">
      <%= link_to 'CANCEL', :back, class: 'btn btn-purple-secondary'%>
    </div>

    <div class="col-2">
      <%= f.submit 'SAVE', class: 'btn btn-purple-primary' %>
    </div>
  </div>
<% end %>
</div>
